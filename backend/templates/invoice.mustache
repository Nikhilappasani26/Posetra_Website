{{! Invoice Template }}

<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1 {
      text-align: center;
    }
    .section {
      margin-bottom: 20px;
    }
    .section strong {
      width: 150px;
      display: inline-block;
    }
    .items-table {
      width: 100%;
      border-collapse: collapse;
    }
    .items-table th, .items-table td {
      padding: 8px;
      border: 1px solid #ddd;
      text-align: left;
    }
  </style>
</head>
<body>
  <h1>Invoice</h1>
  <div class="section">
    <strong>Order ID:</strong> {{orderId}}<br>
    <strong>Date:</strong> {{date}}<br>
  </div>

  <div class="section">
    <strong>Items Purchased:</strong>
    <table class="items-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        {{#items}}
        <tr>
          <td>{{name}}</td>
          <td>{{quantity}}</td>
          <td>{{price}}</td>
        </tr>
        {{/items}}
      </tbody>
    </table>
  </div>

  <div class="section">
    <strong>Total Amount:</strong> ${{total}}<br>
    <strong>Payment Method:</strong> {{paymentMethod}}<br>
  </div>

  <div class="section">
    <p>Thank you for your purchase!</p>
  </div>
</body>
</html>
